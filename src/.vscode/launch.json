{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Make and Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/bin/process_generator.out",
            "args": ["bin/processes.txt", "2"],
            "stopAtEntry": true,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Make Debug",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}